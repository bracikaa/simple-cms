<%= link_to("<< Back To List", subjects_path, :class => 'back-link') %>

<div class = "subjects show">
	<h2>Show Subjects</h2>

	<table summary = "Subject detail view" class = "rwd-table">
		<tr>
			<th>Name </th>
			<td><%= @subject.name %> </td>
		</tr>

		<tr>
			<th> Position </th>
			<td><%= @subject.position %> </td>
		</tr>

		<tr>
			<th> Visible?</th>
			<td><%= @subject.visible ? 'true' : 'false' %></td>
		</tr>

		<tr>
			<th> Created</th>
			<td><%= @subject.created_at %></td>
		</tr>

		<tr>
			<th> Updated</th>
			<td><%= @subject.updated_at %></td>
		</tr>
	</table>
</div>
